using System;
class RandomNumberGeneratorDigits
{
    static void Main()
    {
        {
            Random number = new Random();

            for (int i = 0; i < 3; i++)
            {
                int randomNumber = number.Next(1, 10000);
                string readNumber = Convert.ToString(randomNumber);
                int numberDigits = readNumber.Length;
                Console.WriteLine("The radndomly generated number is {0} and it consists of {1} digits", randomNumber, numberDigits);
            }
        }
    }
}
