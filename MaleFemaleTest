using System;
class MaleFemale
{
    static void Main()
    {
        Console.Write("Choose gender with <f> or <m> ");
        while (true)
        {
            {
                ConsoleKey key = Console.ReadKey().Key;
                {
                    if (key == ConsoleKey.F)
                    {
                        Console.WriteLine(" ");
                        Console.WriteLine("Your gender is female");
                    }
                    else if (key == ConsoleKey.M)
                    {   Console.WriteLine(" ");
                        Console.WriteLine("Your gender is male");
                    }
                    else
                    {
                        Console.WriteLine("Escape");
                    }
                }
            }
       } 
    }
}



